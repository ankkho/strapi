{
  "collectionName": "components_elements_hero_ctas",
  "info": {
    "name": "hero-cta",
    "displayName": "Hero CTA",
    "icon": "cursor",
    "description": "Call-to-action button with icon support, used across all Hero components"
  },
  "options": {},
  "attributes": {
    "label": {
      "type": "string",
      "required": true,
      "minLength": 1,
      "maxLength": 100
    },
    "href": {
      "type": "string",
      "required": true,
      "maxLength": 500
    },
    "variant": {
      "type": "enumeration",
      "enum": [
        "primary",
        "secondary",
        "outline",
        "ghost",
        "link"
      ],
      "default": "primary",
      "required": true
    },
    "size": {
      "type": "enumeration",
      "enum": [
        "sm",
        "md",
        "lg",
        "xl"
      ],
      "default": "md"
    },
    "icon": {
      "type": "string",
      "required": false,
      "maxLength": 50
    },
    "iconPosition": {
      "type": "enumeration",
      "enum": [
        "left",
        "right"
      ],
      "default": "right"
    },
    "openInNewTab": {
      "type": "boolean",
      "default": false
    },
    "className": {
      "type": "string",
      "required": false,
      "maxLength": 500
    },
    "ariaLabel": {
      "type": "string",
      "required": false,
      "maxLength": 200
    }
  }
}