    },
    "direction": {
      "type": "string",
      "default": "to bottom right",
      "maxLength": 100
    },
    "colors": {
      "type": "json",
      "required": true
    },
    "animated": {
      "type": "boolean",
      "default": false
    },
    "animationDuration": {
      "type": "integer",
      "default": 10,
      "min": 1,
      "max": 60
    }
  }
}