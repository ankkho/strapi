{
  "collectionName": "components_elements_modal_configs",
  "info": {
    "name": "modal-config",
    "displayName": "Modal Config",
    "icon": "layer",
    "description": "Modal dialog configuration for modal-trigger variant"
  },
  "options": {},
  "pluginOptions": {
    "content-type-builder": {
      "visible": false
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "minLength": 1,
      "maxLength": 200
    },
    "description": {
      "type": "string",
      "required": false,
      "maxLength": 500
    },
    "closeAriaLabel": {
      "type": "string",
      "default": "Close modal",
      "maxLength": 100
    },
    "maxWidth": {
      "type": "enumeration",
      "enum": [
        "sm",
        "md",
        "lg",
        "xl",
        "2xl"
      ],
      "default": "md"
    },
    "className": {
      "type": "string",
      "required": false,
      "maxLength": 500
    }
  }
}