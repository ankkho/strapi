{
  "collectionName": "components_sections_hero_bentos",
  "info": {
    "name": "hero-bento",
    "displayName": "Hero Bento",
    "icon": "grid",
    "description": "Bento grid hero section with flexible cell layouts (3-grid, 4-grid, mosaic, interactive)"
  },
  "options": {},
  "pluginOptions": {
    "content-type-builder": {
      "visible": false
    }
  },
  "attributes": {
    "variant": {
      "type": "enumeration",
      "enum": [
        "3-grid",
        "4-grid",
        "mosaic",
        "interactive"
      ],
      "default": "3-grid",
      "required": true
    },
    "clientDirective": {
      "type": "enumeration",
      "enum": [
        "none",
        "load",
        "visible",
        "idle"
      ],
      "required": false
    },
    "headline": {
      "type": "string",
      "required": false,
      "maxLength": 200
    },
    "subheadline": {
      "type": "string",
      "required": false,
      "maxLength": 500
    },
    "cells": {
      "type": "component",
      "repeatable": true,
      "component": "elements.bento-cell",
      "required": true,
      "min": 2,
      "max": 8
    },
    "height": {
      "type": "enumeration",
      "enum": [
        "auto",
        "screen",
        "half",
        "two-thirds"
      ],
      "default": "auto"
    },
    "gap": {
      "type": "enumeration",
      "enum": [
        "2",
        "3",
        "4",
        "6",
        "8"
      ],
      "default": "4"
    },
    "maxWidth": {
      "type": "enumeration",
      "enum": [
        "4xl",
        "5xl",
        "6xl",
        "7xl",
        "full"
      ],
      "default": "7xl"
    },
    "padding": {
      "type": "enumeration",
      "enum": [
        "none",
        "sm",
        "md",
        "lg",
        "xl"
      ],
      "default": "lg"
    },
    "backgroundColor": {
      "type": "string",
      "required": false,
      "maxLength": 100
    },
    "textColor": {
      "type": "string",
      "default": "text-foreground",
      "maxLength": 100
    },
    "className": {
      "type": "string",
      "required": false,
      "maxLength": 500
    },
    "sectionId": {
      "type": "string",
      "required": false,
      "maxLength": 100
    },
    "ariaLabel": {
      "type": "string",
      "required": false,
      "maxLength": 200
    },
    "structuredData": {
      "type": "json",
      "required": false
    }
  }
}